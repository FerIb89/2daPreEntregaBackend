<article id="list-products">
  {{#each docs}}
  <div class="cards-container">
    <div class="card" style="width: 16rem;">
      <img src="{{thumbnail}}" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <p class="card-text">{{this.description}}</p>
        <p class="card-text">Precio</p>
        <p class="card-text">U$D:{{this.price}}</p>
        <div class="card-body">
          <a  href="/{{this._id}}"  class="card-linkA">Ver mas</a>
          
        </div>
        <div class="add-quantity">
          <button type="submit" data-product-id="{{this._id}}" class="btn btn-primary add-to-cart-button">AÃ±adir al
            Carrito</button>
          <div class="quantity-input">
            {{!-- <button type="button" class="quantity-button btn  quantity-up">+</button> --}}
